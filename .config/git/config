[user]
  email = mariocesar.c50@gmail.com
  name = Mario CÃ©sar

[core]
  editor = nvim
  autocrlf = input
  quotepath = false

[alias]
  ci = commit
  co = checkout
  st = status
  s = status --short --branch
  l = log -M --stat --abbrev-commit --graph
  lg = log --pretty=oneline -n 20 --graph --abbrev-commit
  remotes = remote --verbose
  tags = tag -l
  branches = branch --all
  aliases = config --get-regexp alias
  search = "!f() { git grep \"$1\" $(git rev-list --all); } && f"
  gone = "!f() { git fetch --all --prune; git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D; }; f"

[color]
  ui = true
  branch = auto
  diff = auto
  status = auto
  interactive = auto

[merge]
  summary = true
  ff = no
  commit = no

[diff]
  external = difft
  algorithm = histogram
  colorMoved = default
  noprefix = true
  tool = difftastic
  colorMoved = default

[difftool]
  prompt = false

[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"

[pull]
  default = matching
  rebase = true

[push]
  default = current

[credential]
  helper = store

[init]
  defaultBranch = main

[branch]
  autoSetupRebase = always
	sort = -committerdate

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[rerere]
  enabled = true

[pager]
  difftool = true
  diff = false
