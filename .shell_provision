function fetchinstall() {
    if [ ! -f  "${1}" ]; then
        echo "Installing ${1}";
        curl --silent -fLo "${1}" --create-dirs "${2}"
    fi
}

fetchinstall ~/.local/share/nvim/site/autoload/plug.vim \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

fetchinstall ~/.local/share/antigen/antigen.zsh \
    https://git.io/antigen

