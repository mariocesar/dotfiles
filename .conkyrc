conky.config = {
    background=false,
    update_interval=0.3,
    cpu_avg_samples=2,
    net_avg_samples=2,
    override_utf8_locale=true,
    double_buffer=true,
    no_buffers=true,

    text_buffer_size=2048,
    imlib_cache_size = 10,

    own_window=true,
    own_window_type='desktop',
    own_window_transparent=true,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager', -- own_window_hints undecorate,sticky,skip_taskbar,skip_pager,below
    own_window_hints='above',
    own_window_title='equalizer=widget',
    own_window_argb_visual=true,

    border_width=0,
    border_inner_margin=0,
    border_outer_margin=0,

    maximum_width=230,
    minimum_width=230,

    alignment='top_right',

    draw_shades=false,
    draw_outline=false,
    draw_borders=false,
    draw_graph_borders=false,
    use_xft = true,
    font = 'Noto Sans:size=8',
    text_buffer_size = 256,
    override_utf8_locale                 = true,

    uppercase=false,
    default_color='gray',

    short_units=true,
    pad_percents=2,
    top_name_width=15,
}

conky.text = [[







Uptime${alignr}${uptime}
RAM Usage: ${alignr}$mem/$memmax - $memperc%
${memgraph}
${membar}
CPU Usage: ${alignr}$cpu%
${cpugraph}
${cpubar}
cpu0 ${cpubar 7,80 cpu0}${offset 13}cpu2 ${cpubar 7,80 cpu2}
cpu1 ${cpubar 7,80 cpu1}${offset 13}cpu3 ${cpubar 7,80 cpu3}

${alignc}File system:
/: ${alignr}${fs_used /}/${fs_size /}
${fs_bar 6 /}
/media/Datos: ${alignr}${fs_used /media/Datos}/${fs_size /media/Datos}
${fs_bar 6 /media/Datos}

${alignc}Networking:

ip:${addrs enp3s0}  
${downspeedgraph enp3s0 20,100 gray gray} ${upspeedgraph enp3s0 20,100 gray gray} 
↓${downspeed enp3s0} k/s ${goto 130}↑${upspeed enp3s0} k/s
Total: ${totaldown enp3s0} ${goto 130}Total: ${totalup enp3s0}

${alignc}Top Processes:

${goto 0}TOP CPU${goto 100}PID${goto 145}CPU${goto 190}MEM
${goto 0}${top name 1}${goto 100}${top pid 1}${goto 140}${top cpu 1}%${goto 185}${top mem 1}%
${goto 0}${top name 2}${goto 100}${top pid 2}${goto 140}${top cpu 2}%${goto 185}${top mem 2}%
${goto 0}${top name 3}${goto 100}${top pid 3}${goto 140}${top cpu 3}%${goto 185}${top mem 3}%
${goto 0}${top name 4}${goto 100}${top pid 4}${goto 140}${top cpu 4}%${goto 185}${top mem 4}%

${goto 0}TOP RAM${goto 100}PID${goto 145}CPU${goto 190}MEM
${goto 0}${top_mem name 1}${goto 100}${top_mem pid 1}${goto 140}${top_mem cpu 1}%${goto 185}${top_mem mem 1}%
${goto 0}${top_mem name 2}${goto 100}${top_mem pid 2}${goto 140}${top_mem cpu 2}%${goto 185}${top_mem mem 2}%
${goto 0}${top_mem name 3}${goto 100}${top_mem pid 3}${goto 140}${top_mem cpu 3}%${goto 185}${top_mem mem 3}%
${goto 0}${top_mem name 4}${goto 100}${top_mem pid 4}${goto 140}${top_mem cpu 4}%${goto 185}${top_mem mem 4}%

${alignc} Docker containers

${execi 4 docker ps --format "- {{.Names}}\n  {{.Status}}\t{{.Size}}\n"}
]]
