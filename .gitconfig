[core]
	editor = nvim
    autocrlf = input
    quotepath = false
    excludesfile = /Users/mariocesar/.gitignore

[alias]
    ci = commit
    co = checkout
    st = status
    serve = !git daemon --reuseaddr --verbose --base-path=. --export-all ./.git --enable=receive-pack
    branches = branch -a

    # Refuse to merge and exit with a non-zero status
    # unless the current HEAD is already up-to-date
    # or the merge can be resolved as a fast-forward.
    pull = pull --ff-only --rebase
    update = merge --ff-only
    join = merge --no-ff

    # Mercurial flavor
    addremove = !git add --all . && git add -u

    graph = log --oneline --graph
    diff2 = !git difftool -d

    serve-start = instaweb --start
    serve-stop = instaweb --stop

    search = "!f() { git grep \"$1\" $(git rev-list --all); } && f"

[color]
    ui = true
    branch = auto
    diff = auto
    status = auto
    interactive = auto

[merge]
    summary = true
    conflictstyle = diff3
    strategy-option = patience
    tool = meld

[push]
    default = current

[credential]
    helper = store

[mergetool]
    prompt = false

[diff]
    tool = meld
    renameLimit = 4020

[oh-my-zsh]
    hide-dirty = 1
    hide-status = 1

[pull]
	ff = only
